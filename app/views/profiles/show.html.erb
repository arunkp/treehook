<div class="page-header">
    <h1><%= @user.full_name %></h1>
</div>


<% if @statuses %>
    <% @statuses.each do |status| %>
        <div class="status">
           <p><%= status.content %></p>
           <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
            <span class="admin">
                | <i class="fa fa-pencil"></i><%= link_to "Edit", edit_status_path(status) %> |
                <i class="fa fa-trash"></i><%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?" } %>
            </span>
          </div>
        </div>
    <% end %>
<% end %>